{
  "name": "zzz",
  "version": "0.5.0",
  "description": "Replacement for Postman",
  "tasks": {
    "init": "npm install ; deno task cache",
    "cache": "deno cache src/**/*.ts",
    "test": "rm coverage/*.json 2>/dev/null; deno test -A --coverage=coverage",
    "tests": "deno task test 'src/*'",
    "coverage": "deno coverage --lcov --output=coverage/lcov.info coverage && deno coverage --html coverage && deno coverage",
    "coverage:open": "code coverage/html/index.html",
    "lint": "deno lint --unstable src/",

    "cli": "deno run -A --unstable src/cli.ts",
    "cli:build": "deno compile --unstable --allow-all --output=bin/zzz src/cli.ts",
    "tui": "deno run -A --unstable src/tui.ts",
    "tui:build": "deno compile --unstable --allow-all --output=bin/zzz-tui src/tui.ts",
    "http": "deno run -A --unstable src/http.ts http",
    "http:build": "deno compile --unstable --allow-all --output=bin/zzz-server src/http.ts",
    "web": "deno task vite --host 127.0.0.1",
    "web:build": "deno task vite build",
    "desktop": "cd $INIT_CWD/src/apps/zzz/interfaces/desktop/; cargo tauri dev",
    "desktop:build": "cd $INIT_CWD/src/apps/zzz/interfaces/desktop/; cargo tauri build",
    "desktop:bin": "$INIT_CWD/src/apps/zzz/interfaces/desktop/target/release/Zzz",

    "web:preview": "deno task vite --host 127.0.0.1 preview",
    "vite": "cd src/apps/zzz/interfaces/web ; deno run -A --unstable --node-modules-dir npm:vite"
  },
  "lock": false,
  "fmt": {
    "useTabs": false,
    "lineWidth": 280,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "never",
    "include": ["src/"],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts",
      "node_nodules",
      "src/apps/zzz/interfaces/desktop/target",
      "src/apps/zzz/interfaces/web/dist",
      "src/apps/zzz/interfaces/web/node_modules"
    ]
  },
  "lint": {
    "include": ["*.ts"],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts",
      "node_nodules",
      "**/node_nodules",
      "src/apps/zzz/interfaces/desktop/target",
      "src/apps/zzz/interfaces/web/dist",
      "src/apps/zzz/interfaces/web/components",
      "src/apps/zzz/interfaces/web/node_modules"
    ]
  },
  "test": {
    "include": ["src/*.ts"],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts",
      "node_nodules",
      "**/node_nodules",
      "src/apps/zzz/interfaces/desktop/target",
      "src/apps/zzz/interfaces/web/dist",
      "src/apps/zzz/interfaces/web/components/*.ts",
      "src/apps/zzz/interfaces/web/node_modules"
    ]
  }
}
